{
  "name": "My Custom C++ App",
  "version": "latest",
  "slug": "my_custom_cpp_app",
  "description": "This is a custom C++ app running in Docker",
  "startup": "application",
  "boot": "auto",
  "image": "sergheislobodeaniuc/my_mqtt_app",
  "arch": ["amd64"],
  "options": {
    "broker_ip": "default_value",
    "broker_port": 1883,
    "mqtt_user": "none",
    "mqtt_pass": "none"
  },

  "schema": {
    "broker_ip": "str",
    "broker_port": "int",
    "mqtt_user": "str",
    "mqtt_pass": "str"
  },

  "environment": {
    "BROKER_IP": "${broker_ip}",
    "BROKER_PORT": "${broker_port}",
    "USERNAME": "${mqtt_user}",
    "PASSWORD": "${mqtt_pass}"
  }
}
